@model IEnumerable<Person>
@{
    ViewData["Title"] = "Index";
}

<h1>Persons</h1>

<a asp-controller="Person" asp-action="Create" class="btn btn-primary">Create New Person</a>
<br/>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="40%">
                    @obj.FirstName
                </td>
                <td width="40%">
                    @obj.LastName
                </td>
                <td>
                    <a asp-controller="Person" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-light">Edit</a>
                </td>
                <td>
                    <a asp-controller="Person" asp-action="Delete" asp-route-id="@obj.Id"  class="btn btn-light">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>